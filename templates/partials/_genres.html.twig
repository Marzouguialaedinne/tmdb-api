<div class="list-genres">
    <form action="{{ path('genre_movies') }}" method="post" name="genreForm">
        {% for genre in genresMovies %}
            <div class="form-check">
                <input class="form-check-input"
                       type="radio"
                       value="{{ genre.id }}"
                       name="genre"
                       id="flexRadioDefault{{ genre.id }}"
                        {% if currentGenre is defined %} {% if currentGenre ==  genre.id  %} checked {% endif%} {% endif%}
                />
                <label class="form-check-label" for="flexRadioDefault{{ genre.id }}">
                    <span>{{ genre.name }}</span>
                </label>
            </div>
        {%  endfor %}
    </form>
</div>